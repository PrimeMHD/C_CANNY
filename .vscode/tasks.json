{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
			"type": "shell",
			"label": "build make",
			"command": "make",
			// "args": [
			// 	"${file}",
			// 	"-o",
			// 	"${fileDirname}/${fileBasenameNoExtension}",
			// 	"-std=c++11"
			// ],
			"options": {
				"cwd": "${workspaceFolder}/"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
    ],
    "version": "2.0.0"
}